<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="main" fx:id="main" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/9.0.1"
            fx:controller="it.polimi.ingsw.ui.controller.MainController">
    <center>
        <HBox id="boards-container" fx:id="fxBoardsContainer" alignment="CENTER" spacing="10.0"
              BorderPane.alignment="CENTER"/>
    </center>
    <top>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" text="Tool Card 1">
                            <styleClass>
                                <String fx:value="card"/>
                                <String fx:value="tool-card"/>
                            </styleClass>
                        </Button>
                        <Button mnemonicParsing="false" text="Tool Card 2">
                            <styleClass>
                                <String fx:value="card"/>
                                <String fx:value="tool-card"/>
                            </styleClass>
                        </Button>
                        <Button mnemonicParsing="false" text="Tool Card 3">
                            <styleClass>
                                <String fx:value="card"/>
                                <String fx:value="tool-card"/>
                            </styleClass>
                        </Button>
                    </children>
                </HBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox>
                    <children>
                        <Label text="RoundTrack coming soon"/>
                        <HBox fx:id="fxDraftPool" spacing="10.0"/>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                            <styleClass>
                                <String fx:value="public-objective-card"/>
                                <String fx:value="card"/>
                            </styleClass>
                        </ImageView>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                            <styleClass>
                                <String fx:value="public-objective-card"/>
                                <String fx:value="card"/>
                            </styleClass>
                        </ImageView>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                            <styleClass>
                                <String fx:value="public-objective-card"/>
                                <String fx:value="card"/>
                            </styleClass>
                        </ImageView>
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <left>
        <ImageView fx:id="fxPrivObjCard" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER"/>
    </left>
    <right>
        <VBox fx:id="fxButtonContainer" alignment="CENTER" maxHeight="1.7976931348623157E308"
              BorderPane.alignment="CENTER">
            <children>
                <Button disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#placeDie"
                        text="Place die"/>
                <Button disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Use tool card"/>
                <Button disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#endTurn"
                        text="End turn"/>
            </children>
        </VBox>
    </right>
    <bottom>
        <Label fx:id="fxMessage" styleClass="message" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
