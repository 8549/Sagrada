<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" xmlns="http://javafx.com/javafx/9.0.1"
            fx:controller="it.polimi.ingsw.controller.IntroController">
    <left>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Label text="Name:">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="nameField"/>
                <HBox>
                    <children>
                        <VBox>
                            <children>
                                <Label text="Connection type:">
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </Label>
                                <RadioButton mnemonicParsing="false" text="RMI">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                    <toggleGroup>
                                        <ToggleGroup fx:id="toggleGroup"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="socketToggle" mnemonicParsing="false" text="Socket"
                                             toggleGroup="$toggleGroup"/>
                            </children>
                            <HBox.margin>
                                <Insets right="20.0"/>
                            </HBox.margin>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Server details:">
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </Label>
                                <GridPane hgap="5.0" vgap="5.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES"/>
                                        <ColumnConstraints hgrow="SOMETIMES"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="SOMETIMES"/>
                                        <RowConstraints vgrow="SOMETIMES"/>
                                        <RowConstraints vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="Host"/>
                                        <TextField fx:id="hostField" promptText="127.0.0.1" GridPane.columnIndex="1"/>
                                        <Label text="Port" GridPane.rowIndex="1"/>
                                        <TextField fx:id="portField" promptText="3131" GridPane.columnIndex="1"
                                                   GridPane.rowIndex="1"/>
                                    </children>
                                </GridPane>
                            </children>
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </left>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <bottom>
        <ButtonBar BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="connectBtn" defaultButton="true" mnemonicParsing="false" onAction="#handleConnect"
                        text="Connect"/>
            </buttons>
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </ButtonBar>
    </bottom>
</BorderPane>
